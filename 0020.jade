			.container
				ul.nav.clearfix
					li
						.search
							form
								.search-group
									input.form-control(placeholder="输入关键字")
									button.btn-search(type="submit"): i.fi.fi-search
					li
						.select-box
							label.custom-select
								select#sel
									option(selected) 项目分类
									option 项目分类 1
									option 项目分类 2
									option 项目分类 3
								.select-text
					li
						.select-box
							label.custom-select
								select#sel
									option(selected) 更新时间
									option 更新时间 1
									option 更新时间 2
									option 更新时间 3
								.select-text
					li
						.select-box
							label.custom-select
								select#sel
									option(selected) 年份
									option 年份 1
									option 年份 2
									option 年份 3
								.select-text
					li
						.select-box
							label.custom-select
								select#sel
									option(selected) 月份
									option 月份 1
									option 月份 2
									option 月份 3
								.select-text
					li
						.select-box
							label.custom-select
								select#sel
									option(selected) 点播次数
									option 点播次数 1
									option 点播次数 2
